# Google OAuth 2.0 Credentials
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost

# OAuth Token Storage
TOKEN_PATH=./token.json

# HTTP Server Configuration (for OpenAI/ngrok integration)
# Generate a secure token: openssl rand -hex 32
MCP_TOKEN=your-secure-token-min-32-characters-long

# ngrok configuration
NGROK_DOMAIN=your-domain.ngrok-free.app
PORT=3000

# Security Settings
# READ_ONLY=true means only list/get operations (safer for public exposure)
# READ_ONLY=false allows create/update/delete operations
READ_ONLY=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
